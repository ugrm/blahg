---
import "../style/fonts.css";
import "../style/global.css";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const { title, description, image = "/profile_picture_3.png" } = Astro.props;
---

<head>
	<!-- Global Metadata -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
	<meta name="generator" content={Astro.generator} />

	<!-- Primary Meta Tags -->
	<title>{title}</title>
	<meta name="title" content={title} />
	<meta name="description" content={description} />

	<!-- Open Graph / Facebook -->
	<meta property="og:title" content="Jeahn Han" />
	<meta property="og:description" content="Welcome to Jeahn's personal website!" />
	<meta property="og:image" content={new URL("/profile_picture_3.png", Astro.url)} />

	<!-- Sitemap -->
	<link rel="sitemap" href="/sitemap-index.xml" />
</head>
